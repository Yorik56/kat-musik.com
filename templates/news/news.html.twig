                            {#			#}
                        {% endfor %}


                    </div><!-- #posts end -->

                    <!-- Pagination
                    ============================================= -->


                </div><!-- .postcontent end -->

                <!-- Sidebar
                ============================================= -->
                <div class="sidebar nobottommargin col_last clearfix">
                    <div class="sidebar-widgets-wrap">


                        <div class="widget clearfix">

                            <div class="widget clearfix">

                                <h4>Dernière musique</h4>
                                {% for music in musics %}
                                    {{ music.embed|raw }}
                                {% endfor %}

                            </div>
                        </div>
                        <div class="widget clearfix">
                            <h4>Prochain concert</h4>
                            {% for nextconcert in nextconcerts %}
                                <div class="spost clearfix">
                                    <div class="entry-image">
                                        <img src="{{ asset("imagesArticles/" ~ nextconcert.image) }}"
                                             class="petiteImage" alt="...">
                                    </div>
                                    <div class="entry-c">
                                        <div class="entry-title">
                                            <h4><a href="#">{{ nextconcert.titre }}</a></h4>
                                        </div>
                                        <div class="entry-title">
                                            <h4><a href="#"><img src="images/icons/map-icon.png"
                                                                 style="width: 1em">{{ nextconcert.lieu }}</a></h4>
                                        </div>
                                        <ul class="entry-meta">
                                            <li>{{ nextconcert.date|date("d/M/Y") }}</li>
                                        </ul>
                                    </div>
                                </div>

                            {% endfor %}
                        </div>
                        <div class="widget clearfix">

                            <h4>Dernière vidéo</h4>
                            {% for lastvideo in lastvideos %}
                                {{ lastvideo.embed|raw }}
                            {% endfor %}


                        </div>




                    </div>

                </div>


    </section><!-- #content end -->


{% extends ('base.html.twig') %}

{% block body %}

    <!-- Page Title
        ============================================= -->
    <section id="page-blog" class="img-bd-news">

        <div class="container clearfix">
            <h1 class="center text-white titre-bd">News</h1>
        </div>

    </section><!-- #page-title end -->

    <section id="content">

        <div class="content-wrap">

            <div class="container clearfix">

                <!-- Post Content
                ============================================= -->
                <div class="postcontent nobottommargin clearfix">

                    <!-- Posts
                    ============================================= -->
                    <div id="posts" class="small-thumbs">
                        {% for article in articles %}
                            <div class="entry clearfix">
                                <div class="entry-image">
                                    <img src="{{ asset("imagesArticles/" ~ article.image) }}" class="card-img-top image-menu" alt="...">
                                </div>
                                <div class="entry-c">
                                    <div class="entry-title">
                                        <h2><a href="blog-single.html">{{ article.Titre }}{{ article.SousTitre }}</a>
                                        </h2>
                                    </div>
                                    <div class="">
                                        <h4>{{ article.SousTitre }}</h4>
                                    </div>


                                    <ul class="entry-meta clearfix">
                                        <li><i class="icon-calendar3"></i>{{ article.date|date("d/M/Y") }}</li>
                                    </ul>
                                    <div class="entry-content">

                                        <p>{{ article.Texte|slice(0, 250)|raw }}</p>


                                        <a href="{{ path('article', {id: article.id }) }}" class="more-link" >Read More</a>
                                    </div>
                                </div>
                            </div>



                            {#							<h2><a href="blog-single-full.html">{{ article.Titre }}</a></h2>#}
                            {#							{{ article.Titre }}#}
                            {#							{{ article.SousTitre }}#}

                                            {#            </div>#}
                                            {#            <div class="fadeIn second">#}
                                            {#                {{ form_widget(ContactForm.telephone) }}#}
                                            {#            </div>#}
                                            {#            <div class="erreur">#}
                                            {#                {{ form_errors(ContactForm.telephone) }}#}
                                            {#            </div>#}
                                            {{ form_widget (formcom.Commentaire) }}
                                            {#Deux façon de mettre un boutton submit, soit dans le CommentaireType ou ici, a toi de choisir#}
                                            <button class="btn btn-primary mb-3" type="submit">Valider</button>
                                            {{ form_end(formcom) }}
                                        </div>
                                    </div>
                                </form>
                                <div class="col-12 form-group">
                                    {% for comm in commentaires %}

                                        {{ comm.pseudo }}
                                        {{ comm.DateTime|date("d/m/Y")  }}
                                        {{ comm.commentaire|raw }}

                                    {% endfor %}
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {% endblock %}

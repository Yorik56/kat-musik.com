                <div class="container clearfix">



                        <div class="row">
                            <div class="col-lg-12">
                                <form class="row" action="include/form.php" method="post" enctype="multipart/form-data">
                                    <div class="form-process"></div>
                                    <div class="col-12 form-group">
                                        <div class="row">
                                            <div class="col-md-6 form-group">
                                                <label>Pseudo:</label>
                                                {{ form_widget (formcom.Pseudo) }}
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label>Email:</label>
                                                {{ form_widget (formcom.Email) }}
                                            </div>
                                            {# Tu as plusieur manière de faire des formulaires en twig, je te laisse te renseigner#}
                                            {#  https://symfony.com/doc/4.1/reference/forms/twig_reference.html#}
                                            {#            <div class="">#}

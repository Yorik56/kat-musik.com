{% extends ('base.html.twig') %}
    {% block body %}

        <!-- Page Title
                ============================================= -->
        <section id="page-title">

            <div class="container clearfix">
                <h1>Media Embeds</h1>
                <span>Embedding media elements will be more Easier &amp; Reliable</span>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Shortcodes</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Media Embeds</li>
                </ol>
            </div>

        </section><!-- #page-title end -->

        <!-- Content
        ============================================= -->
        <section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <!-- Post Content
                    ============================================= -->
                    <div class="postcontent nobottommargin clearfix">

                        {% for video in videos %}
                            <h3>{{ video.titre }}</h3>

                            {{ video.embed|raw }}

                            <div class="divider"><i class="icon-circle"></i></div>
                        {% endfor %}


                    </div><!-- .postcontent end -->

                    <!-- Sidebar
                    ============================================= -->

                    <div class="sidebar nobottommargin col_last">
                        <div class="sidebar-widgets-wrap">

                            <div class="widget clearfix">

                                <div class="widget clearfix">

                                    <h4>Derni√®re musique</h4>
                                    {% for music in musics %}
                                        {{ music.embed|raw }}
                                    {% endfor %}

                                </div>
                            </div>

                            <div class="widget clearfix">

                                <div class="widget clearfix">
                                    <h4>Prochain concert</h4>
                                    {% for nextconcert in nextconcerts %}
                                        <div class="spost clearfix">
                                            <div class="entry-image">
                                                <img src="{{ asset("imagesArticles/" ~ nextconcert.image) }}"
                                                     class="petiteImage" alt="...">
                                            </div>
                                            <div class="entry-c">
                                                <div class="entry-title">
                                                    <h4><a href="#">{{ nextconcert.titre }}</a></h4>
                                                </div>
                                                <div class="entry-title">
                                                    <h4><a href="#"><img src="images/icons/map-icon.png"
                                                                         style="width: 1em">{{ nextconcert.lieu }}</a></h4>
                                                </div>
                                                <ul class="entry-meta">
                                                    <li>{{ nextconcert.date|date("d/M/Y") }}</li>
                                                </ul>
                                            </div>
                                        </div>

                                    {% endfor %}
                                </div>

                            </div>
                            <div class="widget clearfix">

                                <div class="widget clearfix">
                                    <h4>Dernier articles</h4>


                                    <div id="post-list-footer">

                                        {% for article in articles %}
                                            <div class="spost clearfix">
                                                <div class="entry-image">
                                                    <img src="{{ asset("imagesArticles/" ~ article.image) }}"
                                                         class="petiteImage" alt="...">
                                                </div>
                                                <div class="entry-c">
                                                    <div class="entry-title">
                                                        <h4><a href="#">{{ article.titre }}</a></h4>
                                                    </div>
                                                    <ul class="entry-meta">
                                                        <li>{{ article.date|date("d/M/Y") }}</li>
                                                    </ul>
                                                </div>
                                            </div>

                                        {% endfor %}
                                    </div>

                                </div>




                            </div>


                        </div>


                    </div><!-- .sidebar end -->

                </div>

            </div>

        </section><!-- #content end -->
    {% endblock %}
